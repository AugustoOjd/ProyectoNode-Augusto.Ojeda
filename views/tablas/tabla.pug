head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  title Formulario PUG
body( style={"margin": "3% 25%"})
  h1(style={"text-align": "center"}) Tabla Pug
    if producto.length === 0
      h2(style={"text-align": "center"}) No hay productos agregados
    else
      table.table
          thead
          tr
              th(scope='col') Nombre
              th(scope='col') Precio
              th(scope='col') URL imagen
          tbody
            each e in producto
              tr
                td= e.nombre
                td= e.precio
                td
                  img(src= e.thumbnail style={"width": "50px", "height": "50px" })
    a(href='/')
      button volver al formulario