head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  title Formulario
body( style={"margin": "3% 25%"})
  form(action='/api/productos' method='post')
    .mb-3
      label.form-label(for='nombre') Nombre
      input#nombre.form-control(type='text' name='nombre')
    .mb-3
      label.form-label(for='precio') Precio
      input#precio.form-control(type='number' name='precio')
    .mb-3
      label.form-label(for='imagen') URL foto
      input#imagen.form-control(type='text' name='imagen')
    button.btn.btn-primary(type='submit') Submit
  
  table.table
    thead
      tr
        th(scope='col') Nombre
        th(scope='col') Precio
        th(scope='col') URL imagen
    tbody
      if productos.length === 0
        tr
          td(colspan=4) No hay productos
      else
        each e in productos
          tr
            td= e.nombre
            td= e.precio
            td
              img(src= e.imagen)