  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  script(src='/socket.io/socket.io.js')
  script(src='main.js')
  title Formulario PUG
body( style={"margin": "3% 25%"})
  h1(style={"text-align": "center"}) Formulario Pug
  div(style={"background-color": "rgb(107, 189, 221)", "padding": "10px"})
    form(action='/api/productos' method='post')
      .mb-3
        label.form-label(for='nombre') Nombre
        input#nombre.form-control(type='text' name='nombre')
      .mb-3
        label.form-label(for='precio') Precio
        input#precio.form-control(type='number' name='precio')
      .mb-3
        label.form-label(for='imagen') URL foto
        input#imagen.form-control(type='text' name='thumbnail')
      button.btn.btn-primary(type='submit') Submit
  div(style={"margin-top": "50px"})
    h2(style={"text-align": "center"}) Tabla Pug
    if producto.length === 0
      h3(style={"text-align": "center"}) No hay productos agregados
    else
      table.table
          thead
          tr
              th(scope='col') Nombre
              th(scope='col') Precio
              th(scope='col') URL imagen
          tbody
            each e in producto
              tr
                td= e.nombre
                td= e.precio
                td
                  img(src= e.thumbnail style={"width": "50px", "height": "50px" })
  div
    h2 Centro de Mensajeria
    div#messages
    form(onsubmit='addMessage(this)')
      input#username(type='text' placeholder='Tu Nombre')
      input#texto(type='text' placeholder='Cu√©ntanos algo...')
      input(type='submit' value='Enviar')

